apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
spec:
  ingressClassName: nginx
  tls:
  - hosts:
    - www.k8steam.io
    - sub.k8steam.io
    secretName: k8s-secret
  rules:
  - host: www.k8steam.io
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: phpserver-lb
            port:
              number: 80
  - host: sub.k8steam.io
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: goapp-lb
            port:
              number: 80

